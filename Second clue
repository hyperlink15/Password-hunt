<script>
  const correct = "OLDCAR2017";
  document.getElementById('go').addEventListener('click', function(){
    const v = (document.getElementById('token').value || "").trim().toUpperCase();
    const hint = document.getElementById('hint');
    if(v === correct){
      hint.innerHTML = 'Good. Your next step: <strong>final.html</strong> — the question there is personal. Only the correct answer will reveal the password.<br><a href="final.html">Go to Final</a>';
    } else {
      hint.textContent = 'Token incorrect. Hint: it was the car year.';
    }
  });
</script>

